@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Web.Pages.Question

<div class="row">
    <div class="col-8">
        <form method="post">
            <input type="hidden" name="SessionId" value="@Model.SessionId"/>
            <input type="hidden" name="QuestionId" value="@Model.CurrentQuestion.Id"/>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@Model.CurrentQuestion.Title</h3>
                </div>
                <div class="card-body">
                    <p>
                        @Model.CurrentQuestion.Body
                    </p>
                </div>
                <div class="card-body">
                    <p>
                        <partial name="QuestionModel" model="Model.CurrentQuestion"/>
                    </p>
                </div>
                <div class="card-footer">
                    <div class="d-flex">
                        <a href="#" class="btn btn-link">Cancel</a>
                        <button type="submit" class="btn btn-primary ms-auto">Next Question</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-4">
        <div class="card bg-primary-lt">
            <div class="card-body">
                <h3 class="card-title">Help</h3>
                <p class="text-secondary">
                    @Model.CurrentQuestion.HelpText
                </p>
            </div>
        </div>
    </div>
</div>



